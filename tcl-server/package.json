{
	"name": "tcl-server",
	"displayName": "tcl-server",
	"description": "Language Server for TCL",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npx installServerIntoExtension ../tcl-client ./package.json ./tsconfig.json && npx tsc -p ./",
		"watch": "npx installServerIntoExtension ../tcl-client ./package.json ./tsconfig.json && npx tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"vscode-languageserver": "^3.1.0"
	}
}
